# Use an official Python runtime as the base image
FROM python:3.9-slim

# Set the working directory
WORKDIR /app

# Copy the requirements file first to avoid unnecessary reinstallation of dependencies
COPY requirements.txt .

# Install the dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application files
COPY . .

# Expose the default Flask port
EXPOSE 5000

# Set the environment variable for Flask
ENV FLASK_APP=app.py  # Replace 'app.py' with your actual Flask app file name if different

# Define the entry point to run Flask
CMD ["flask", "run", "--host=0.0.0.0"]
